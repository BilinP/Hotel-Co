<BorderPane prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: #3c4149;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelco.controllers.PaymentController">
   <top>
      <Text fill="WHITE" onMouseReleased="#switchToBooking" strokeType="OUTSIDE" strokeWidth="0.0" text="&lt; Go Back" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets left="30.0" top="30.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" layoutX="220.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Credit Card">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <TextField fx:id="creditCardNum" layoutX="225.0" layoutY="193.0" prefHeight="40.0" prefWidth="230.0" promptText="Credit Card Number">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="CVV" layoutX="225.0" layoutY="258.0" prefHeight="40.0" prefWidth="230.0" promptText="CVV">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Text fx:id="due" fill="WHITE" layoutX="91.0" layoutY="527.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Due:">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <Button layoutX="493.0" layoutY="468.0" mnemonicParsing="false" onMouseReleased="#payment" style="-fx-background-color: green;" text="PAY" textFill="WHITE">
               <font>
                  <Font size="48.0" />
               </font>
            </Button>
            <DatePicker fx:id="expDate" layoutX="225.0" layoutY="319.0" prefHeight="40.0" prefWidth="230.0" promptText="Expiration Date" />
            <ChoiceBox fx:id="cardType" layoutX="225.0" layoutY="381.0" prefHeight="40.0" prefWidth="230.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
